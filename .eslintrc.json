{
	"extends": "eslint:recommended",
	"env": {
		"es2018": true,
		"browser": true,
		"commonjs": true
	},
	"parserOptions": {
        "sourceType": "module"
	},
	"ignorePatterns": [
		"node_modules",
		"dist"
	],
	"rules": {
        "no-unused-vars": [
            "error",
            {
                "vars": "all",
                "args": "none",
                "ignoreRestSiblings": false
            }
        ]
	}
}
